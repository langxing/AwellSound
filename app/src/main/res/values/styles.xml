<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/dsp_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- dialog style -->

    <style name="aps_sound_image_style_port">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_tab_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dsp_seekBar_style">
        <item name="android:thumbOffset">0dp</item>
        <item name="android:splitTrack">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:thumb">@drawable/dsp_increase_thumb</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:max">28</item>
        <item name="android:padding">14dp</item>
        <item name="seekBarRotation">CW270</item>
    </style>

    <style name="dsp_seekBar_parent_view_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="aps_sound_image_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="aps_sound_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/dsp_aps_sound_field_type_no_select_bg_draw</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
